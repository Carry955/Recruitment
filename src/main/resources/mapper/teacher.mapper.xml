<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper
                PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.carry.recruitment.mapper.TeacherMapper">
    <select id="login" resultType="Teacher">
        select * from t_teacher where username = #{username};
    </select>
    <insert id="register">
        insert into t_teacher(username, password) values
        (
            #{username}, #{password}
        );
    </insert>
    <select id="getCredits" resultMap="CreditMap">
        select * from t_authentication where state = #{state};
    </select>
    <resultMap id="CreditMap" type="Credit">
        <association property="company" column="company_id" javaType="Company" select="com.carry.recruitment.mapper.CompanyMapper.getCompany">
        </association>
    </resultMap>
    <update id="credit">
        update t_authentication set state = "已通过" where id = #{credit_id};
    </update>
    <update id="revoke">
        update t_authentication
            set state = ''
            where id = #{credit_id};
    </update>
</mapper>